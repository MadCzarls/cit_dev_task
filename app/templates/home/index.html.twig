{% extends 'base.html.twig' %}

{% block title %}Hello AppController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {{ form_start(form) }}
        {{ form_row(form.country) }}
        {{ form_row(form.city) }}

        <button>Submit</button>

        {{ form_end(form) }}

        {% if errors|length > 0 %}
            Errors occured:
            <ul>
                {% for error in errors %}
                    <li>
                        <code>{{ error }}</code>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

    </div>
{% endblock %}
