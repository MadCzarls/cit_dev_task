{% extends 'base.html.twig' %}

{% block title %}CTI DEV TASK{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {{ form_start(form) }}
        <div>
            {{ form_label(form.country) }}
            <br/>
            {{ form_widget(form.country) }}  {{ form_help(form.country) }}
            {{ form_errors(form.country) }}
        </div>
        <hr/>
        <div>
            {{ form_label(form.city) }}
            <br/>
            {{ form_widget(form.city) }} {{ form_help(form.city) }}
            {{ form_errors(form.city) }}
        </div>

        <button>Submit</button>

        {{ form_end(form) }}

        {% if temperature is not null %}
            Average temperature in this location: <code>{{ temperature }}Â°C</code>
        {% endif %}

    </div>
{% endblock %}
